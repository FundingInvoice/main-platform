    '#suffix' => '</div>',

  );

  $form['feeval'] = array(

    '#type' => 'hidden',

    '#title' => t('Pay out value'),

    '#prefix' => '<span class="dotted_red"></span><div id="charge">',

    '#suffix' => '</div></div>',

  );

  $form['turnover'] = array(

    '#type' => 'select',

    '#title' => t('Company Turnover'),

    '#options' => array(

      250 => '150k-250k',

      500 => '251k-500k',

      1000 => '501k-1m',

      2000 => '1m-2.5m',

      5000 => '2.5-5mn',

      6000 => '5mn+',

    ),  

  );

  $form['invalue'] = array(

    '#title' => 'What is the value of your invoice?',

    '#type' => 'slider',

    '#default_value' => 50000,

    '#orientation' => 'horizontal',

    '#slider_style' => 'blue',

    '#range' => TRUE,

    '#min' => 0,

    '#max' => 1000000,

