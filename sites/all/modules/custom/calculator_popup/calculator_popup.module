    '#validate_range' => TRUE,

  );

  $form['duedays'] = array(

    '#title' => 'When it will be paid?(in days)',

    '#type' => 'slider',

    '#default_value' => 30,

    '#orientation' => 'horizontal',

    '#slider_style' => 'blue',

    '#range' => TRUE,

    '#min' => 0,

    '#max' => 180,

    '#step' => 1,

    '#disabled' => FALSE,

    '#display_inputs' => TRUE,

    '#display_values' => TRUE,

    '#display_values_format' => '%{value}%',

