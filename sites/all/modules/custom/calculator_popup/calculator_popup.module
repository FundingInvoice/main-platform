<?php

/**

 * Implements hook_block_info().

 */

function calculator_popup_block_info() {

  $blocks = array();

  $blocks['calculator_popup'] = array(

  'info' => t('Calculator Popup'),

  );

return $blocks;

}



/**

 * Implements hook_block_view().

 */

 

function calculator_popup_block_view($delta = '') {

  $block = array();

  switch ($delta) {

    case 'calculator_popup':

      $block['subject'] = t('Invoice Calculator');

      $block['content'] = drupal_get_form('calculator_popup_form');

      break;

  }

  return $block;

}



function calculator_popup_form($form, &$form_state) {

